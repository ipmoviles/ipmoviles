---
export const prerender = true;
import { changeLanguage, t } from "i18next";
import Layout from "../layouts/Layout.astro";
import Icon from "astro-icon";
import FormContact from "../components/Contact/FormContact";

changeLanguage("en");
---

<Layout title={t("titles.contact")}>
  <div class="container">
    <div class="page-title">
      <h1 class="contact-title">{t("contact_us.contact_us_title")}</h1>
      <p class="contact-intro">{t("contact_us.form.contac_text01")}</p>
    </div>
    <div class="contact-container">
      <div class="section-container">
        <div class="form-container">
          <h2 class="form-title">{t("contact_us.form.title")}</h2>
          <!-- form component -->
          <FormContact
            client:load
            namelabel={t("contact_us.form.name")}
            nameplaceholder={t("contact_us.form.place_name")}
            emaillabel={t("contact_us.form.email")}
            emailplaceholder={t("contact_us.form.place_email")}
            phonelabel={t("contact_us.form.phone")}
            phoneplaceholder={t("contact_us.form.place_phone")}
            messagelabel={t("contact_us.form.message")}
            messageplaceholder={t("contact_us.form.place_message")}
            buttonlabel={t("contact_us.form.send_button")}
          />
        </div>
        <div class="contact-container">
          <h2>{t("contact_us.contact_info.contact_info_title")}</h2>
          <div class="contact-content">
            <h3>{t("contact_us.contact_info.USA_phone")}</h3>
            <p>PBX +1 (834) 852-3006</p>
            <p>Cells +1 (239) 790-0882</p>
          </div>

          <!-- 
          <div class="contact-content">
            <h3>{t("contact_us.contact_info.emails")}</h3>
            <a href="mailto:andres.morales@ipmoviles.net"
              >andres.morales@ipmoviles.net</a
            >
            <a href="mailto:karina.otalora@ipmoviles.net"
              >karina.otalora@ipmoviles.net</a
            >
            <a href="mailto:info@ipmoviles.com">info@ipmoviles.com</a>
          </div>
          -->

          <div class="contact-content">
            <h3>{t("contact_us.contact_info.redes")}</h3>
            <div class="icons">
              <a
                href="https://co.linkedin.com/company/ipmoviles"
                target="_blank"
              >
                <Icon name="mdi:linkedin" />
              </a>
              <a href="https://www.instagram.com/ip_moviles/" target="_blank">
                <Icon name="mdi:instagram" />
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="contact-info">
      <div class="maps">
        <div class="maps-text">
          <h2 class="title">{t("contact_us.location_title")}</h2>
          <p>{t("contact_us.location_sub")}</p>
        </div>
        <div class="maps-container">
          <div class="map">
            <h3 class="title">{t("contact_us.united_states")}</h3>
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d3592.974043053597!2d-80.1903096!3d25.7714209!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88d9b69d0859ff59%3A0x70b79e05a6bc4e77!2s333%20SE%202nd%20Ave%2C%20Miami%2C%20FL%2033131%2C%20EE.%20UU.!5e0!3m2!1ses-419!2sco!4v1708058273505!5m2!1ses-419!2sco"
              width="650"
              height="250"
              style="border:0;"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"></iframe>
            <p>333 SE 2ND AVENUE SUITE 2000 MIAMI FL 33131.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

<style lang="scss">
  @use "../assets/scss/base/_breakpoint.scss" as *;

  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;

    > .page-title {
      display: flex;
      flex-direction: column;
      width: 90%;
      max-width: 1350px;
      gap: 30px;
      margin: 40px 0px;
      > .contact-title {
        font-size: 3.6rem;
        font-weight: 700;

        @include breakpoint(md) {
          font-size: 4.8rem;
        }

        @include breakpoint(lg) {
          font-size: 5.6rem;
        }

        @include breakpoint(xl) {
          font-size: 6.4rem;
        }
      }
    }

    > .contact-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 25px;
      width: 100%;
      margin: 40px 0px;

      > .section-container {
        display: flex;
        flex-direction: column;
        gap: 40px;
        width: 90%;
        max-width: 1350px;

        @include breakpoint(md) {
          flex-direction: row;
          gap: 20px;
        }

        > .form-container {
          display: flex;
          flex-direction: column;
          gap: 25px;
          width: 100%;
          height: 100%;
          @include breakpoint(md) {
            width: 65%;
            height: auto;
            background-color: var(--card-background-color);
            box-sizing: border-box;
            border-radius: var(--radius-default);
            padding: 30px;
            color: var(--color-mint-cream);
          }

          @include breakpoint(lg) {
            width: 70%;
          }

          @include breakpoint(xl) {
            width: 75%;
          }
        }

        > .contact-container {
          display: flex;
          flex-direction: column;
          gap: 15px;
          width: 100%;
          background-color: var(--card-background-color);
          border-radius: var(--radius-default);
          padding: 30px;
          color: var(--color-mint-cream);
          > h2 {
            font-size: 2rem;
          }

          h3 {
            margin-bottom: 5px;
            font-size: 1.8rem;
          }

          > .contact-content {
            display: flex;
            flex-direction: column;
            width: 100%;
            p {
              font-size: 1.6rem;
            }
            > a {
              font-size: 1.2rem;
              @include breakpoint(md) {
                font-size: 1.4rem;
              }
            }

            > .icons {
              display: flex;
              gap: 10px;
              [astro-icon] {
                margin-top: 5px;
                width: 40px;
                height: 40px;
                color: var(--action-color);
                &:hover {
                  color: var(--color-mint-cream);
                }
              }
            }
          }
          @include breakpoint(md) {
            width: 35%;
            background-color: var(--card-background-color);
            box-sizing: border-box;
            justify-content: center;
            border-radius: var(--radius-default);
            padding: 30px;
            color: var(--color-mint-cream);
          }

          @include breakpoint(lg) {
            width: 30%;
          }

          @include breakpoint(xl) {
            width: 25%;
            h2 {
              font-size: 2.2rem;
            }
            h3 {
              font-size: 2rem;
            }
            p {
              font-size: 1.8rem;
            }
          }
        }
      }
    }
    > .contact-info {
      display: flex;
      flex-direction: column;
      width: 100%;
      align-items: center;
      margin: 40px 0px;
      > .maps {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 30px;
        width: 90%;
        max-width: 1350px;

        > .maps-text {
          display: flex;
          flex-direction: column;
          gap: 10px;
          width: 100%;
          > h2 {
            color: var(--action-color);
          }
        }

        > .maps-container {
          display: flex;
          flex-direction: column;
          align-items: flex-start;
          gap: 20px;
          width: 100%;

          @include breakpoint(md) {
            flex-direction: row;
          }
          > .map {
            display: flex;
            flex-direction: column;
            gap: 20px;
            align-items: center;
            width: 100%;
            > h3 {
              color: var(--action-color);
            }
            > iframe {
              width: 100%;
              border-radius: var(--radius-default);
            }
          }
        }
      }
    }
  }
</style>
